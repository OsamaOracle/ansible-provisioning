version: "3.7"

services:
  neo4j:
    restart: always
    image: neo4j:{{ neo4j_image_version }}
    ports:
      - 7474:7474
      - 7687:7687
    environment:
      NEO4J_ACCEPT_LICENSE_AGREEMENT: "yes"
    volumes:
      - /docker/neo4j/data:/data
    networks:
      - neo4j

networks:
  neo4j:
    name: neo4j